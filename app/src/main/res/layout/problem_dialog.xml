<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="259dp"
    android:layout_height="243dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_black_border">
    <ImageButton
        android:id="@+id/ImageButton_problemDialog_close"
        android:layout_width="8dp"
        android:layout_height="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/ic_bk_x"
        />
    <TextView
        android:id="@+id/TextView_problemDialog_ExclamationMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:text="!"
        android:textSize="48sp"
        android:textColor="@color/color_primary_light"
        />
    <TextView
        android:id="@+id/TextView_problemDialog_message0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextView_problemDialog_ExclamationMark"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/color_primary_light"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginTop="35dp"
        android:text="@string/problemDialog_message0"
        />
    <TextView
        android:id="@+id/TextView_problemDialog_message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextView_problemDialog_ExclamationMark"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/color_primary_light"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginTop="35dp"
        android:text="@string/problemDialog_message1"
        />
    <TextView
        android:id="@+id/TextView_problemDialog_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/TextView_problemDialog_right"
        android:layout_marginBottom="16dp"
        android:text="이어서 풀기"
        android:textColor="@color/dialog_button_text"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/TextView_problemDialog_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/TextView_problemDialog_left"
        android:layout_marginBottom="16dp"
        android:text="이어서 풀기"
        android:textColor="@color/dialog_button_text"
        android:textSize="12sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>